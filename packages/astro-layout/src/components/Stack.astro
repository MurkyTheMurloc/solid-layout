---
import {FlexDirection, Gap, Padding} from "styles/types/css_types";
interface Props {
    gap?: Gap
    padding?: Padding
    direction?: FlexDirection
}
const {gap ,padding ,direction} = Astro.props
---

<div class={stack}>
    <slot/>
</div>
<style define:vars={{
    gap,
   padding,
   direction
}}>
    .stack {
        display: flex;
        flex-direction: var(--direction);
        gap: var(--gap);
        padding: var(--padding);
    }

</style>
